.media-item
  = link_to media.remote_url.blank? ? full_asset_url(media.file.url(:original)) : media.remote_url, target: '_blank', rel: 'noopener', class: "u-#{media.video? || media.gifv? ? 'video' : 'photo'}" do
    - if media.image?
      %img{ src: full_asset_url(media.file.url(:original)) }
    - else
      %video{ src: full_asset_url(media.file.url(:original)), autoplay: true, loop: true }/
